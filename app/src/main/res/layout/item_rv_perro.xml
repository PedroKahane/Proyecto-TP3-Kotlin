<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    tools:ignore="UseCompoundDrawables">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/brandImagen"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:contentDescription=""
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@drawable/custom_rounded_mask"
            tools:image="imagen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@id/brandImagen">

            <TextView
                android:id="@+id/brandNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                tools:text="nombre" />

            <TextView
                android:id="@+id/brandEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                tools:text="edad" />

            <TextView
                android:id="@+id/brandRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                tools:text="raza" />

            <TextView
                android:id="@+id/brandSubRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                tools:text="subRaza" />

            <TextView
                android:id="@+id/brandGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                tools:text="genero" />

            <ImageButton
                android:id="@+id/favorito"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:contentDescription="Guardar en favoritos"
                android:src="@drawable/sin_guardar"
                android:background="#40FFFFFF"/>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>